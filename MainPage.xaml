<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GG_llamadaAPI.MainPage"
             Title="Clima Actual">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
         
                <Label Text="Ingrese la latitud:" Grid.Row="0" />
                <Entry x:Name="GG_latitudEntry" Placeholder="Latitud" Grid.Row="1" />
                <Label Text="Ingrese la longitud:" Grid.Row="2" />
                <Entry x:Name="GG_longitudEntry" Placeholder="Longitud" Grid.Row="3" />
                <Button Text="EnviarDatos" Clicked="GG_OnEnviarClicked" Grid.Row="4" />
                <Label Text="Estado clima" Grid.Row="5" />
                <Label x:Name="GG_estadoClimaLabel" Grid.Row="6" />
                <Label Text="Pais" Grid.Row="7" />
                <Label x:Name="GG_paisLabel" Grid.Row="8" />
                <Label Text="Ciudad" Grid.Row="9" />
                <Label  x:Name="GG_ciudadLabel" Grid.Row="10" />
                
            
        </VerticalStackLayout>
    </ScrollView>
